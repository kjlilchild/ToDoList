<table class="table table-bordered">
  <thead>
    <tr class="table-primary">
      <th scope="col">Task</th>
    </tr>
  </thead>
  <tbody>
    <% if list.completed %>
    <tr>
      <td class="table-primary"><%= list.description %></td>
    </tr>
    <% else %>
    <tr>
      <td class="table-secondary"><%= list.description %></td>
    </tr>
    <% end %>
 
  </tbody>
</table>